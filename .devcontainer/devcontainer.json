{
  "name": "ampere-devcontainer",
  "image": "mcr.microsoft.com/devcontainers/javascript-node:1-22-bookworm",
  "build": {
    "dockerfile": "../Dockerfile",
    "target": "dev"
  },
  "features": {
    "ghcr.io/devcontainers/features/node:1": {
      "version": "22"
    }
  },
  "postCreateCommand": "npm i -g @openai/codex@latest",
  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "${workspaceFolder}/.venv/bin/python",
        "python.terminal.activateEnvironment": true
      },
      "extensions": [
        "openai.chatgpt",
        "ms-python.python",
        "ms-azuretools.vscode-docker",
        "ms-vscode.vscode-typescript-next"
      ]
    }
  },
  "postStartCommand": "bash -lc \"update-ca-certificates || true; echo 'source /workspace/.venv/bin/activate' >> /root/.bashrc\"",
  "remoteUser": "root",
  "runArgs": [
    "--network",
    "host",
    "--add-host=minio.local:192.168.1.29",
    "--add-host=s3.minio.local:192.168.1.29"
  ],
  "containerEnv": {
    "SSL_CERT_DIR": "/etc/ssl/certs",
    "SSL_CERT_FILE": "/etc/ssl/certs/ca-certificates.crt",
    "REQUESTS_CA_BUNDLE": "/etc/ssl/certs/ca-certificates.crt",
    "NODE_EXTRA_CA_CERTS": "/etc/ssl/certs/ca-certificates.crt"
  },
  "mounts": [
    "source=${env:USERPROFILE}/.kube,target=/home/vscode/.kube,type=bind,consistency=cached",
    "source=${env:USERPROFILE}/.cert,target=/usr/local/share/ca-certificates/host,type=bind,consistency=cached",
    "source=${env:USERPROFILE}/.vscode-server-ampere,target=/root/.vscode-server,type=bind,consistency=cached"
  ],
  "remoteEnv": {
    "KUBECONFIG": "/home/vscode/.kube/config-ampere-devcontainer",
    "OPENAI_API_KEY": "${localEnv:OPENAI_API_KEY}"
  }
}